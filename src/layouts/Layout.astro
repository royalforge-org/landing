---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'RoyalForge | The Global Marketplace for Free Cuban Professionals',
  description = 'RoyalForge is the decentralized marketplace empowering Cuban professionals to work, earn, and thrive globally through blockchain freedom.'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Cuban professionals, blockchain marketplace, decentralized freelance, Web3 Cuba, DAO, smart contracts, economy freedom, Base network" />
    <meta name="author" content="RoyalForge DAO" />

    <meta property="og:title" content="RoyalForge â€” Forge the Free Economy" />
    <meta property="og:description" content="The global Web3 marketplace for free Cuban professionals. Join the movement for a borderless, decentralized economy." />
    <meta property="og:image" content="https://royalforge.io/og-image.jpg" />
    <meta property="og:url" content="https://royalforge.io" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@RoyalForgeDAO" />

     <!-- Preload critical image -->
    <link rel="preload" as="image" href="/royalforge-logo.png" type="image/png" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />


    <link rel="canonical" href="https://royalforge.io" />
    <meta name="robots" content="index, follow" />

    <!-- Google tag (gtag.js) loaded out of the critical path -->
    <script is:inline>
      const GA_ID = 'G-YN4JCPM7FS';
      if (typeof window !== 'undefined') {
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          window.dataLayer.push(arguments);
        }
        const loadAnalytics = () => {
          if (document.getElementById('ga-script')) {
            return;
          }
          const script = document.createElement('script');
          script.id = 'ga-script';
          script.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
          script.async = true;
          script.onload = () => {
            gtag('js', new Date());
            gtag('config', GA_ID);
          };
          document.head.appendChild(script);
        };
        if ('requestIdleCallback' in window) {
          window.requestIdleCallback(loadAnalytics);
        } else {
          window.addEventListener('load', loadAnalytics, { once: true });
        }
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background: #0a0a0f;
    color: #ffffff;
    scroll-behavior: smooth;
  }

  * {
    box-sizing: border-box;
  }
</style>
